<html>
<head>
    <% title = "Planes"; %>
    <% include ./partials/head.ejs %>


</head>
<body class="container">
<header>
    <% include ./partials/header.ejs %>
</header>

<main>
    <div class="jumbotron">
        <form id="addplane" action="planes/addplane" method="post" class="form-horizontal">
            <div class="form-group">
                <label class="col-xs-3 control-label">Plane Name: </label>
                <div class="col-xs-5">
                    <input type="text" class="form-control" name="addname" required/>
                </div>
            </div>

            <div class="form-group">
                <label class="col-xs-3 control-label">Number of First Class Seats:  </label>
                <div class="col-xs-5">
                    <input type="number" class="form-control" name="numFirstSeat"  min="0" required/>
                </div>
            </div>

            <div class="form-group">
                <label class="col-xs-3 control-label">Number of Business Seats:  </label>
                <div class="col-xs-5">
                    <input type="number" class="form-control" name="numBizSeat"  min="0" required/>
                </div>
            </div>

            <div class="form-group">
                <label class="col-xs-3 control-label">Number of Coach Seats:  </label>
                <div class="col-xs-5">
                    <input type="number" class="form-control" name="numCoachSeat"  min="0" required/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-9 col-xs-offset-3">
                    <button type="submit" class="btn btn-primary">Add Plane</button>
                </div>
            </div>


        </form>
    </div>

    <div class="jumbotron">
        <table class="table">
            <thread>
                <th>#</th>
                <th>Plane Name</th>
                <th>First Class Seats</th>
                <th>Buisness Class Seats</th>
                <th>Coach Class Seats</th>
                <th>Select</th>
            </thread>
            <tbody>
                <%var j = 1; for(var i = 0; i < result.length; i++){ %>
                    <tr>
                        <th scope="row"><%=j%></th>
                        <td><%=result[i].airplane_name%></td>
                        <td><%=result[i].airplane_firstSeats%></td>
                        <td><%=result[i].airplane_buisnessSeats%></td>
                        <td><%=result[i].airplane_coachSeats%></td>
                        <td><a href= planes/<%= result[i].airplaneID%>>Select</a> </td>
                    </tr>
                <%j++;}%>
            </tbody>
        </table>
    </div>

</main>

<footer>
    <% include ./partials/footer.ejs %>
</footer>

</body>
</html>