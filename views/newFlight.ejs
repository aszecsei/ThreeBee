<html>
<head>
    <% title = "Flights"; %>
    <% include ./partials/head.ejs %>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>


</head>
<body class="container">
<script type="text/javascript" src="./scripts/flights.js"></script>
<header>
    <% include ./partials/header.ejs %>
</header>

<main>
    <div class="jumbotron">
        <form id="addplane" action="newflight/addflight" method="post" class="form-horizontal">
            <div class="form-group">
                <label class="col-xs-3 control-label">Duration: </label>
                <div class="col-xs-5">
                    <input type="number" class="form-control" name="duration" min="0" required/>
                </div>
            </div>

            <div class="form-group">
                <label class="col-xs-3 control-label">Day and Time of First Flight:  </label>
                <div class="col-xs-5">
                    <input type="datetime-local" class="form-control" name="dateTime" required/>
                </div>
            </div>

            <div class="form-group">
                <label class="col-xs-3 control-label">Turnover time:   </label>
                <div class="col-xs-5">
                    <input type="number" class="form-control" min="0" name="turnover" required/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label">Stop 1:  </label>
                <div class="col-xs-5">
                    <input type="text" class="form-control" name="firstStop" required/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label">Stop 2:  </label>
                <div class="col-xs-5">
                    <input type="text" class="form-control" name="secondStop" required/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-9 col-xs-offset-3">
                    <button type="submit" class="btn btn-primary">Add Plane</button>
                </div>
            </div>
        </form>
    </div>
</main>

<footer>
    <% include ./partials/footer.ejs %>
</footer>

</body>
</html>