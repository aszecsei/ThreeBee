<html>
<head>
    <% title = "Signup"; %>
    <% include ./partials/head.ejs %>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>


</head>
<body class="container">
<script type="text/javascript" src="./scripts/planes.js"></script>
<header>
    <% include ./partials/header.ejs %>
</header>

<main>
    <div class="jumbotron">
        <form id="addplane" method="post" class="form-horizontal">
            <div class="form-group">
                <label class="col-xs-3 control-label">Plane Name: </label>
                <div class="col-xs-5">
                    <input type="text" class="form-control" name="name" required/>
                </div>
            </div>

            <div class="form-group">
                <label class="col-xs-3 control-label">Number of First Class Seats:  </label>
                <div class="col-xs-5">
                    <input type="number" class="form-control" name="numFirstSeat" required/>
                </div>
            </div>

            <div class="form-group">
                <label class="col-xs-3 control-label">Number of Business Seats:  </label>
                <div class="col-xs-5">
                    <input type="number" class="form-control" name="numBizSeat" required/>
                </div>
            </div>

            <div class="form-group">
                <label class="col-xs-3 control-label">Number of Coach Seats:  </label>
                <div class="col-xs-5">
                    <input type="number" class="form-control" name="numCoachSeat" required/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-9 col-xs-offset-3">
                    <button type="submit" class="btn btn-primary">Add Plane</button>
                </div>
            </div>


        </form>
    </div>
    <div class="jumbotron">
        <form id="addplane" method="post" class="form-horizontal">
            <select id="airplanes" name="airplanes">
            </select>
            <div class="form-group">
                <div class="col-xs-9 col-xs-offset-3">
                    <button type="submit" class="btn btn-primary">Add Plane</button>
                </div>
            </div>
        </form>
    </div>

</main>

<footer>
    <% include ./partials/footer.ejs %>
</footer>

</body>
</html>