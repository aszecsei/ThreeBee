<!DOCTYPE html>
<html>
<head>
    <% title = "Check In"; %>
    <% include ./partials/head.ejs %>
</head>
<body class="container">

<header>
    <% include ./partials/header.ejs %>
</header>

<main>
    <div class="jumbotron">
        <h1>Check In</h1>
        <div class="alert alert-danger alert-dismissable fade in collapse" id="errorDiv">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <span id="errorMessage"></span>
        </div>
        <form data-toggle="validator" role="form" id="seatform" method="post" class="form-horizontal">

            <%for(var i =0;i<flights;i++){%>
            <div class="form-group has-feedback">
                <label class="col-xs-3 control-label">Seat <%=i%>:</label>
                <div class="col-xs-5">
                    <input type="text" class="form-control" id="seat<%=i%>" name="seat<%=i%>" required/>
                </div>
                <div class="help-block with-errors"></div>
            </div>
            <%}%>


            <div class="form-group has-feedback">
                <div class="col-xs-9 col-xs-offset-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </form>
    </div>
</main>

<footer>
    <% include ./partials/footer.ejs %>
</footer>

</body>
</html>