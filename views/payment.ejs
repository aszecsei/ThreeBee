<!DOCTYPE html>
<html>
<head>
    <% title = "Payment"; %>
    <% include ./partials/head.ejs %>
</head>
<body class="container">

<header>
    <% include ./partials/header.ejs %>
</header>

<main>
    <div class="jumbotron">
        <h1>Payment</h1>
        <form data-toggle="validator" role="form" id="paymentform" method="post" class="form-horizontal">
            <div class="form-group has-feedback">
                <label class="col-xs-3 control-label">Credit Card Number</label>
                <div class="col-xs-5">
                    <input type="text" class="form-control" id="ccn" name="ccn" required/>
                </div>
                <div class="help-block with-errors"></div>
            </div>

            <div class="form-group has-feedback">
                <label class="col-xs-3 control-label">Confirm Credit Card Number</label>
                <div class="col-xs-5">
                    <input type="text" class="form-control" id="ccnconfirm" name="ccnconfirm" data-match ="#ccn" required/>
                </div>
                <div class="help-block with-errors"></div>
            </div>
            <div class="form-group has-feedback">
                <label class="col-xs-3 control-label">Security Code</label>
                <div class="col-xs-5">
                    <input type="number" class="form-control" id="seccode" name="seccode"  minlength="3" maxlength="3"  required/>
                </div>
                <div class="help-block with-errors"></div>
            </div>
            <div class="form-group has-feedback">
                <div class="col-xs-9 col-xs-offset-3">
                    <button type="submit" class="btn btn-primary">Book</button>
                </div>
            </div>
        </form>
    </div>
</main>

<footer>
    <% include ./partials/footer.ejs %>
</footer>

</body>
</html>