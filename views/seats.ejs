<!DOCTYPE html>
<html>
<head>
    <% title = "Check In"; %>
    <% include ./partials/head.ejs %>
</head>
<body class="container">

<header>
    <% include ./partials/header.ejs %>
</header>

<main>
    <div class="jumbotron">
        <h1>Check In</h1>
        <form data-toggle="validator" role="form" id="seatform" method="post" class="form-horizontal">
            <%for(var i =0;i<flights;i++){%>
            <div class="form-group has-feedback">
                <label class="col-xs-3 control-label">Seat <%=i+1%>:</label>
                <div class="col-xs-5">
                    <input type="text" class="form-control" id="seat<%=i+1%>" name="seat<%=i+1%>" required/>
                </div>
                <div class="help-block with-errors"></div>
            </div>
            <div class="form-group has-feedback">
                <label class="col-xs-3 control-label">Luggage Flight <%=i+1%>:</label>
                <div class="col-xs-5">
                    <input type="text" class="form-control" id="luggage<%=i+1%>" name="luggage<%=i+1%>" required/>
                </div>
                <div class="help-block with-errors"></div>
            </div>
            <%}%>


            <div class="form-group has-feedback">
                <div class="col-xs-9 col-xs-offset-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </form>
    </div>
</main>

<footer>
    <% include ./partials/footer.ejs %>
</footer>

</body>
</html>