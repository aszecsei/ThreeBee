<!DOCTYPE html>
<html>
<head>
    <% include ./partials/head.ejs %>
    <% title = "Payment"; %>
</head>
<body class="container">

<header>
    <% include ./partials/header.ejs %>
</header>

<main>
    <div class="jumbotron">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1>Payment</h1>
            </div>
            <div class="panel-body">
                <form id="cardinfo" actions="/purchase/confirm" method="post" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-xs-3 control-label">Total Cost</label>

                    </div>
                    <div class="form-group">
                        <label class="col-xs-3 control-label">Card Number</label>
                        <div class="col-xs-3" >
                            <input name="cardNumber" class="form-control"pattern="[a-zA-Z0-9]{10}" required/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-3 control-label">Security Code</label>
                        <div class="col-xs-2" >
                            <input type="number" name="securityCode" class="form-control" min="0"  max="999" required/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-9 col-xs-offset-3">
                            <button id="submitcardinfo" type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>

            </div>

        </div>

    </div>
</main>

<footer>
    <% include ./partials/footer.ejs %>
</footer>

</body>
</html>