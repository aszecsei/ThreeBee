<!DOCTYPE html>
<html>
<head>
    <% title = "Manager Registered"; %>
    <% include ./partials/head.ejs %>
</head>
<body class="container">

<header>
    <% include ./partials/header.ejs %>
</header>

<main>
    <div class="jumbotron">
        <h1>Admin Dashboard</h1>
    </div>
    <div class="jumbotron">
        <div id="dashboardgroup">
            <div class="btn-group btn-group-justified">
                <div class="btn-group">
                    <button type="button" class="btn btn-default" data-toggle="collapse" data-target="#flights" data-parent="#dashboardgroup">Add or Remove Flights</button>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-default" data-toggle="collapse" data-target="#planes" data-parent="#dashboardgroup">Add or Remove Airplanes</button>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-default" data-toggle="collapse" data-target="#managers" data-parent="#dashboardgroup">Add Managers</button>
                </div>
            </div>
            <div class="accordion-group">
                <div id="managers" class="collapse indent">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h2 class="panel-title">Add Manager</h2>
                        </div>
                        <div class="panel-body">
                            <form data-toggle="validator" role="form" id="signupform" method="post" class="form-horizontal" action="/manager/signup">

                                <div class="form-group has-feedback">
                                    <label class="col-xs-3 control-label">Email</label>
                                    <div class="col-xs-5">
                                        <input type="email" class="form-control" id="email" name="email" placeholder="johndoe@Example.com" minlength="3" pattern= "^([a-z0-9_\.\+-]+)@([\da-z\.-]+)\.([a-z\.]{2,6})$" data-error="Please enter a valid email address"  required/>
                                    </div>
                                    <div class="help-block with-errors"></div>
                                </div>


                                <div class="form-horizontal has-feedback">
                                    <div class="col-xs-9 col-xs-offset-3">
                                        <button type="submit" class="btn btn-primary">Register</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h2 class="panel-title">Edit Managers</h2>
                        </div>
                        <div class="panel-body">
                            <table class="table table-hover table-responsive">
                                <thead>
                                    <tr>
                                        <th>Email</th>
                                        <th>Auth Status</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var i=0; i<managerList.length; i++) { %>
                                    <tr id="ManagerRow<%= managerList[i].id %>">
                                        <td><%= managerList[i].email %></td>
                                        <td><%= managerList[i].auth_status %></td>
                                        <td><button type="button" class="btn btn-danger" data-toggle="modal" data-target="#ManagerDeleteConfirm<%= managerList[i].id %>">Delete</button></td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                            <% for(i=0; i<managerList.length; i++) { %>
                            <div id="ManagerDeleteConfirm<%= managerList[i].id %>" class="modal fade" role="dialog">
                                <div class="modal-dialog">
                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">Confirm Delete</h4>
                                        </div>
                                        <div class="modal-body">
                                            <p>Are you sure you want to delete this manager's account? This action cannot be easily undone.</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-danger pull-left" data-dismiss="modal" onclick="deleteManager(<%= managerList[i].id %>)">Delete</button>
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <% } %>
                            <script>
                                function deleteManager(id) {
                                    $.ajax({
                                        url: '/manager/' + id,
                                        type: 'DELETE',
                                        success: function() {
                                            $("#ManagerRow" + id).remove();
                                        },
                                        error: function(req, status, error) {

                                        }
                                    });
                                }
                            </script>
                        </div>
                    </div>
                </div>
                <div id="flights" class="collapse indent">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h2 class="panel-title">Add Flight</h2>
                        </div>
                        <div class="panel-body">
                            <form id="addflight" action="/flights" method="post" class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-xs-3 control-label">Plane:  </label>
                                    <div class="col-xs-5">
                                        <select class="form-control" id="planeID" name="planeID">
                                            <% for(var i=0; i<planes.length; i++) { %>
                                            <option value="<%= planes[i].airplaneID %>"><%= planes[i].airplane_name %></option>
                                            <% } %>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-xs-3 control-label">Duration: </label>
                                    <div class="col-xs-5">
                                        <input type="number" class="form-control" name="duration" min="0" required/>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-xs-3 control-label">Day and Time of First Flight:  </label>
                                    <div class="col-xs-5">
                                        <input type="datetime-local" class="form-control" name="dateTime" required/>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-xs-3 control-label">Turnover time:   </label>
                                    <div class="col-xs-5">
                                        <input type="number" class="form-control" min="0" name="turnover" required/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-xs-3 control-label">Stop 1:  </label>
                                    <div class="col-xs-5">
                                        <select class="form-control" id="arr_city" name="firstStop">
                                            <% for(var i=0; i<airports.length; i++) { %>
                                            <option value="<%= airports[i].airportID %>"><%= airports[i].printName %> (<%= airports[i].abbr %>)</option>
                                            <% } %>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-xs-3 control-label">Stop 2:  </label>
                                    <div class="col-xs-5">
                                        <select class="form-control" id="arr_city" name="secondStop">
                                            <% for(var i=0; i<airports.length; i++) { %>
                                            <option value="<%= airports[i].airportID %>"><%= airports[i].printName %> (<%= airports[i].abbr %>)</option>
                                            <% } %>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-xs-3 control-label">Base price:   </label>
                                    <div class="col-xs-5">
                                        <input type="number" class="form-control" min="0" name="basePrice" required/>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-xs-9 col-xs-offset-3">
                                        <button type="submit" class="btn btn-primary">Add Flight</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h2 class="panel-title">Edit Flights</h2>
                        </div>
                        <div class="panel-body">
                            <table class="table">
                                <thread>
                                    <th>#</th>
                                    <th>Plane</th>
                                    <th>Flight Takeoff</th>
                                    <th>Flight Landing</th>
                                    <th>Departure Time</th>
                                    <th>Arrival Time</th>
                                    <th>Base Price</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </thread>
                                <tbody>
                                <% for(i = 0; i < flights.length; i++){ %>
                                <tr id="FlightRow<%= flights[i].flightID %>">
                                    <th scope="row"><%= i+1 %></th>
                                    <td><%= flights[i].planeName %></td>
                                    <td><%= flights[i].takeoff %> (<%= flights[i].takeoffAbbr %>)</td>
                                    <td><%= flights[i].landing %> (<%= flights[i].landingAbbr %>)</td>
                                    <td><%= flights[i].departureTime %></td>
                                    <td><%= flights[i].arrivalTime %></td>
                                    <td><%= flights[i].flight_basePrice %></td>
                                    <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#FlightEdit<%= flights[i].flightID %>">Edit</button></td>
                                    <td><button type="button" class="btn btn-danger" data-toggle="modal" data-target="#FlightDeleteConfirm<%= flights[i].flightID %>">Delete</button></td>
                                </tr>
                                <% } %>
                                </tbody>
                            </table>
                            <% for(i=0; i<flights.length; i++) { %>
                            <div id="FlightEdit<%= flights[i].flightID %>" class="modal fade" role="dialog">
                                <div class="modal-dialog modal-xl">
                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">Edit Flight</h4>
                                        </div>
                                        <form id="editflight" action="/flights" method="post" class="form-horizontal">
                                            <div class="modal-body">
                                                <div class="panel panel-default">
                                                    <div class="panel-heading">
                                                        <h2 class=" panel-title">Edit Flight</h2>
                                                    </div>
                                                    <div class="panel-body">
                                                        <table class="table-editable" cellspacing="10">
                                                            <thread>
                                                                <th>Plane</th>
                                                                <th>Flight Takeoff</th>
                                                                <th>Flight Landing</th>
                                                                <th>Departure Time</th>
                                                                <th>Arrival Time</th>
                                                                <th>Base Price</th>
                                                            </thread>
                                                            <tbody>
                                                            <tr>
                                                                <td><%= flights[i].planeName %></td>
                                                                <td><%= flights[i].takeoff %> (<%= flights[i].takeoffAbbr %>)</td>
                                                                <td><%= flights[i].landing %> (<%= flights[i].landingAbbr %>)</td>
                                                                <td><%= flights[i].departureTime %></td>
                                                                <td><%= flights[i].arrivalTime %></td>
                                                                <td><%= flights[i].flight_basePrice %></td>
                                                            </tr>

                                                                <tr id="FlightRow<%= flights[i].flightID %>">
                                                                    <input name="test" value="hi">
                                                                    <div class="form-group">
                                                                        <td class="select">
                                                                            <select class="form-control" name="editplaneID">
                                                                                <% for(var p=0; p<planes.length; p++) { %>
                                                                                <option value="<%= planes[p].airplaneID %>"><%= planes[p].airplane_name %></option>
                                                                                <% } %>
                                                                            </select>
                                                                        </td>
                                                                    </div>
                                                                    <td>
                                                                        <select class="form-control" name="editFirstStop">
                                                                            <% for(var d=0; d<airports.length; d++) { %>
                                                                            <option value="<%= airports[d].airportID %>"><%= airports[d].printName %> (<%= airports[d].abbr %>)</option>
                                                                            <% } %>
                                                                        </select>
                                                                    </td>
                                                                    <td>
                                                                        <select class="form-control" name="editSecondStop">
                                                                            <% for(var p=0; p<airports.length; p++) { %>
                                                                            <option value="<%= airports[p].airportID %>"><%= airports[p].printName %> (<%= airports[p].abbr %>)</option>
                                                                            <% } %>
                                                                        </select>
                                                                    </td>
                                                                    <td><input type="datetime-local" class="form-control" name="editDepartDate" required/></td>
                                                                    <td><input type="datetime-local" class="form-control" name="editArriveDate" required/></td>
                                                                    <td><input type="number" class="form-control" min="0" name="editBasePrice" default="10"/></td>

                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-primary pull-left" data-dismiss="modal" onclick="editFlight(<%= flights[i].flightID %>)">Edit</button>
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                            <script>
                                function editFlight(id) {
                                    $.ajax({
                                        url: '/flights/' + id,
                                        type: 'POST',
                                        success: function() {
                                            //$("#FlightRow" + id).remove();
                                        },
                                        error: function(req, status, error) {

                                        }
                                    });
                                }
                            </script>
                            <% for(i=0; i<flights.length; i++) { %>
                            <div id="FlightDeleteConfirm<%= flights[i].flightID %>" class="modal fade" role="dialog">
                                <div class="modal-dialog">
                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">Confirm Delete</h4>
                                        </div>
                                        <div class="modal-body">
                                            <p>Are you sure you want to delete this flight? This action cannot be easily undone.</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-danger pull-left" data-dismiss="modal" onclick="deleteFlight(<%= flights[i].flightID %>)">Delete</button>
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                            <script>
                                function deleteFlight(id) {
                                    $.ajax({
                                        url: '/flights/' + id,
                                        type: 'DELETE',
                                        success: function() {
                                            $("#FlightRow" + id).remove();
                                        },
                                        error: function(req, status, error) {

                                        }
                                    });
                                }
                            </script>
                        </div>
                    </div>
                </div>
                <div id="planes" class="collapse">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h2 class="panel-title">Add Plane</h2>
                        </div>
                        <div class="panel-body">
                            <form id="addplane" action="planes/addplane" method="post" class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-xs-3 control-label">Plane Name: </label>
                                    <div class="col-xs-5">
                                        <input type="text" class="form-control" name="addname" required/>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-xs-3 control-label">Number of First Class Seats:  </label>
                                    <div class="col-xs-5">
                                        <input type="number" class="form-control" name="numFirstSeat" required/>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-xs-3 control-label">Number of Business Seats:  </label>
                                    <div class="col-xs-5">
                                        <input type="number" class="form-control" name="numBizSeat" required/>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-xs-3 control-label">Number of Coach Seats:  </label>
                                    <div class="col-xs-5">
                                        <input type="number" class="form-control" name="numCoachSeat" required/>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-xs-9 col-xs-offset-3">
                                        <button type="submit" class="btn btn-primary">Add Plane</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h2 class="panel-title">Edit Planes</h2>
                        </div>
                        <div class="panel-body">
                            <table class="table table-hover table-responsive">
                                <thread>
                                    <th>Plane Name</th>
                                    <th>First Class Seats</th>
                                    <th>Business Class Seats</th>
                                    <th>Coach Class Seats</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </thread>
                                <tbody>
                                <% for(i = 0; i < planes.length; i++){ %>
                                <tr id="PlaneRow<%= planes[i].airplaneID %>">
                                    <th scope="row"><%= planes[i].airplane_name %></th>
                                    <td><%= planes[i].airplane_firstSeats %></td>
                                    <td><%= planes[i].airplane_buisnessSeats %></td>
                                    <td><%= planes[i].airplane_coachSeats %></td>
                                    <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#PlaneEdit<%= planes[i].airplaneID %>">Edit</button></td>
                                    <td><button type="button" class="btn btn-danger" data-toggle="modal" data-target="#PlaneDeleteConfirm<%= planes[i].airplaneID %>">Delete</button></td>
                                </tr>
                                <% } %>
                                </tbody>
                            </table>
                            <% for(j=0; j<planes.length; j++) { %>
                            <div id="PlaneEdit<%= planes[j].airplaneID %>" class="modal fade" role="dialog">
                                <div class="modal-dialog">
                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">Edit Plane</h4>
                                        </div>

                                        <div class="modal-body">

                                        <div id="PlaneEditRow<%= planes[j].airplaneID %>">
                                            <form id="formid<%= j %>" role="form" class="form-horizontal">
                                                <div class="form-group">
                                                    <label class="col-xs-3 control-label">Plane Name: </label>
                                                    <div class="col-xs-5">
                                                        <input type="text" class="form-control" name="editname" required/>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-xs-3 control-label">Number of First Class Seats:  </label>
                                                    <div class="col-xs-5">
                                                        <input type="number" class="form-control" name="editNumFirstSeat" required/>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-xs-3 control-label">Number of Business Seats:  </label>
                                                    <div class="col-xs-5">
                                                        <input type="number" class="form-control" name="ediNumBizSeat" required/>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label class="col-xs-3 control-label">Number of Coach Seats:  </label>
                                                    <div class="col-xs-5">
                                                        <input type="number" class="form-control" name="editNumCoachSeat" required/>
                                                    </div>
                                                </div>
                                                <input type="submit" id="editplane_submit" name="submit" class="btn btn-primary pull-left" value="Edit" ></input>
                                            </form>
                                            <script>
                                                // Attach a submit handler to the form
                                                $( "#formid<%= j %>" ).submit( function( event ) {
                                                    // Stop form from submitting normally
                                                    event.preventDefault();
                                                    alert('hi there');

                                                    $.ajax({
                                                        type: 'POST',
                                                        url: '/planes/editplane/<%= planes[j].airplaneID %>',
                                                        data: $('#formid<%= j %>').serialize(),
                                                        success: function () {
                                                            alert('form was submitted');
                                                        },
                                                        error: function (exception) {
                                                            alert('there was an error: '+exception);
                                                        }
                                                    });


                                                });
                                            </script>
                                        </div>
                                        </div>
                                        <div class="modal-footer">

                                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <% } %>

                            <% for(i=0; i<planes.length; i++) { %>
                            <div id="PlaneDeleteConfirm<%= planes[i].airplaneID %>" class="modal fade" role="dialog">
                                <div class="modal-dialog">
                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">Confirm Delete</h4>
                                        </div>
                                        <div class="modal-body">
                                            <p>Are you sure you want to delete this plane? This action cannot be easily undone.</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-danger pull-left" data-dismiss="modal" onclick="deletePlane(<%= planes[i].airplaneID %>)">Delete</button>
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                            <script>
                                function deletePlane(id) {
                                    $.ajax({
                                        url: '/planes/' + id,
                                        type: 'DELETE',
                                        success: function() {
                                            $("#PlaneRow" + id).remove();
                                        },
                                        error: function(req, status, error) {

                                        }
                                    });
                                }
                            </script>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script>
            var $myGroup = $('#dashboardgroup');
            $myGroup.on('show.bs.collapse','.collapse', function() {
                $myGroup.find('.collapse.in').collapse('hide');
            });
        </script>
    </div>
</main>
</body>
</html>
