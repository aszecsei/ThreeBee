<html>
<head>
    <% title = "Planes"; %>
    <% include ./partials/head.ejs %>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>


</head>
<body class="container">
<script type="text/javascript" src="./scripts/planes.js"></script>
<header>
    <% include ./partials/header.ejs %>
</header>

<main>
    <div class="jumbotron">
        <form id="addplane" action="planes/addplane" method="post" class="form-horizontal">
            <div class="form-group">
                <label class="col-xs-3 control-label">Plane Name: </label>
                <div class="col-xs-5">
                    <input type="text" class="form-control" name="addname" required/>
                </div>
            </div>

            <div class="form-group">
                <label class="col-xs-3 control-label">Number of First Class Seats:  </label>
                <div class="col-xs-5">
                    <input type="number" class="form-control" name="numFirstSeat" required/>
                </div>
            </div>

            <div class="form-group">
                <label class="col-xs-3 control-label">Number of Business Seats:  </label>
                <div class="col-xs-5">
                    <input type="number" class="form-control" name="numBizSeat" required/>
                </div>
            </div>

            <div class="form-group">
                <label class="col-xs-3 control-label">Number of Coach Seats:  </label>
                <div class="col-xs-5">
                    <input type="number" class="form-control" name="numCoachSeat" required/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-9 col-xs-offset-3">
                    <button type="submit" class="btn btn-primary">Add Plane</button>
                </div>
            </div>


        </form>
    </div>
    <div class="jumbotron">
        <form id="removeplane" action="planes/removeplane" method="post" class="form-horizontal">
            <div class="form-group">
                <label class="col-xs-3 control-label">Plane Name:  </label>
                <div class="col-xs-5">
                    <input type="text" class="form-control" name="rename" required/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-9 col-xs-offset-3">
                    <button type="submit" class="btn btn-primary">Remove Plane</button>
                </div>
            </div>
        </form>
    </div>
    <div class="jumbotron">
        <table class="table">
            <thread>
                <th>#</th>
                <th>Plane Name</th>
                <th>Delete</th>
            </thread>
            <tbody>
                <%var j = 1; for(var i = 0; i < result.length; i++){ %>
                    <tr>
                        <th scope="row"><%=j%></th>
                        <td><%=result[i].airplane_name%></td>
                    </tr>
                <%j++;}%>
            </tbody>
        </table>
    </div>

</main>

<footer>
    <% include ./partials/footer.ejs %>
</footer>

</body>
</html>